<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".PreferenceFragment">

    <TextView
        android:id="@+id/pref_lang_text"
        android:layout_width="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:textColor="#131b37"
        android:textSize="15sp"
        android:textStyle="bold"
        android:text="Language Preferences"
        android:layout_height="wrap_content" />

    <Spinner
        android:id="@+id/pref_lang_spinner"
        android:layout_width="wrap_content"
        android:layout_marginStart="13dp"
        android:textSize="13sp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pref_lang_text"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/pref_lang_save"
        android:layout_width="0dp"
        android:text="Save"
        app:layout_constraintStart_toStartOf="parent"
        android:textStyle="bold"
        android:textColor="#FCFCFC"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:paddingStart="30dp"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:paddingEnd="30dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/pref_lang_spinner"
        android:background="@drawable/save_background"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/pref_lang_noti"
        android:layout_width="0dp"
        app:layout_constraintTop_toBottomOf="@id/pref_lang_save"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:textColor="#131b37"
        android:textSize="15sp"
        android:textStyle="bold"
        android:text="Notification Preferences"
        android:layout_height="wrap_content" />

    <CheckBox
        android:id="@+id/pref_checkBox"
        android:layout_width="wrap_content"
        android:textSize="12sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:shadowColor="#000"
        android:buttonTint="#fcba1d"
        android:textColor="#919090"
        android:checked="true"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pref_lang_noti"
        android:text="Notify when a new lesson is added to enrolled course" />


    <TextView
        android:id="@+id/pref_notification_save"
        android:layout_width="0dp"
        android:text="Save"
        app:layout_constraintStart_toStartOf="parent"
        android:textStyle="bold"
        android:textColor="#FCFCFC"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:paddingStart="30dp"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:paddingEnd="30dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/pref_checkBox"
        android:background="@drawable/save_background"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_height="wrap_content" />


</androidx.constraintlayout.widget.ConstraintLayout>