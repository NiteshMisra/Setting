<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SecurityFragment">

    <TextView
        android:id="@+id/security_current"
        android:layout_width="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Current Password"
        android:textSize="12sp"
        android:textColor="#131b37"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/security_current_password"
        android:layout_width="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/security_current"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="8dp"
        android:textSize="15sp"
        android:inputType="text"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/edittext_background"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/security_new"
        android:layout_width="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/security_current_password"
        android:text="New Password"
        android:textSize="12sp"
        android:textColor="#131b37"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/security_new_password"
        android:layout_width="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/security_new"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="8dp"
        android:inputType="text"
        android:textSize="15sp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/edittext_background"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/security_confirm"
        android:layout_width="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/security_new_password"
        android:text="Confirm Password"
        android:textSize="12sp"
        android:textColor="#131b37"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/security_confirm_password"
        android:layout_width="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/security_confirm"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="8dp"
        android:inputType="text"
        android:textSize="15sp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/edittext_background"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/security_change_btn"
        android:layout_width="0dp"
        android:text="Change Password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textStyle="bold"
        android:textColor="#FCFCFC"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="30dp"
        android:textSize="16sp"
        android:layout_marginTop="30dp"
        android:background="@drawable/save_profile_background"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintTop_toBottomOf="@id/security_confirm_password"
        android:layout_height="wrap_content" />

</androidx.constraintlayout.widget.ConstraintLayout>